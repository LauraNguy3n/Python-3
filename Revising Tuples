#Update Tuples:
x = ("apple" , "pear" , "kiwi" , "peach")  
y = list(x)
y[2] = "cherry"
x = tuple(y)
print(x)

x = ("string" , 12 , 12.31 , 12j , True)    
y = list (x)
y [2:6] = "100"
x = tuple(y)
print(x)

x = ("string" , 12 , 12.31 , 12j , True)
y = list (x)
y [2:6] = ["boolean"]
x = tuple(y)
print(x)


#Append():
x = ("apple" , "pear" , "kiwi" , "peach")
y = list(x)
y.append("orange")
x = tuple(y)
print(x)


#Remove():
x = ("apple" , "pear" , "kiwi" , "peach")
y = list(x)
y.remove("pear")
x = tuple(y)
print(x)


