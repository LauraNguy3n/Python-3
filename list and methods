daytime.remove("boring")
print(daytime)

color = ["yellow","orange","red"]
color.pop (1)
print (color)

machines = ["hair drier" , "fan" , "car"]
machines.pop()
print (machines)

browsers = ["google" , "safari" , "bing"]
browsers.clear()
print (browsers)

