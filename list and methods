#practice
#loop
mylist = ["flowers","smiles","happy"]
for x in mylist:
    print(x)
    
mylist = ["apple","battle","castle"] 
for a in range(len(mylist)):
    print(mylist[a])
    
    
#while loop:
mylist = ["a","b","c"]
i=0
while i < len(mylist):
    print(mylist[i])
    i=i+1
    

#short hand for loop:
mylist = ["hello","welcome","hi"]
[print(d)for d in mylist]
