#Format strings:
text = "Richard is {} years old. His Height is {} tall."
age = 12
height = 5
print(text.format(age,height))


#Escape characters:
#Single quotes(\'):
text = "It\'s raining heavily..."
print(text)


#New line(\n):
text = "Hello, \n my name is Laura. I like coding and cats."
print(text)


#Tab (\t)
text = "I don't feel lonely.\t I am always by my family."
print(text)


#Delete a character(\b)
text = "I don't \bfeel sad. My family is always there for me.\n"
print(text)




#Practice:


text = "My favorite season is {}. But today it is {}."
season = "Winter"
current = "Fall"
print(text.format(season,current))


text = "It\'s so quiet."
print(text)

text = "Reading \n is very fun."
print(text)


text = "I wish I could \t go outside now."
print(text)

text = "Where are you?\b"
print(text)








#Booleans

print(12 > 4)
print(12 < 4)
print(12 == 12)
print(12 >= 4)
print(12 <= 4)

i = 80
l = 50

print(i > l)
print(i < l)
print(i == l)
print(i >= l)
print(i <= l)


e = 12
w = 7

if (e>w):
    print("Nowhere.")
else:
    print("Nice job...")
    
    
print(bool(False))
print(bool())
print(bool(0))
print(bool(None))
print(bool(" "))

print(bool("forseen."))
print(bool(123.))

x = "Smile."
m = 10101000
print(bool(x))
print(bool(m))

text = "\n"
print(text)





